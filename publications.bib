@inproceedings{coOshimaHCII2025,
	author = {Oshima, Chika and Hiraga, Rumi and Yamamoto, Hayato and Nakayama, Koichi},
	title = {A Qualitative Research Study to&nbsp;Clarify Why Deaf and&nbsp;Hard of&nbsp;Hearing People Enjoy Singing},
	year = {2025},
	isbn = {978-3-031-93818-4},
	publisher = {Springer-Verlag},
	address = {Berlin, Heidelberg},
	url = {https://doi.org/10.1007/978-3-031-93819-1_24},
	doi = {10.1007/978-3-031-93819-1_24},
	abstract = {Our research question aims to clarify why people who are deaf or hard of hearing (DHH) enjoy singing. In this paper, as the first step toward answering the research question, we conducted a group interview with four DHH participants and analyzed their data using inductive coding to derive three overarching themes and categories and codes under each of them. One theme, Singing Background, revealed that all four participants sing on a daily basis. Songs used in Vocaloid, a singing synthesizer; anime; and movies are triggers that prompt our participants to sing and empathize with the lyrics. The theme Situations for Singing clarified that they sing 10 or 20 songs at karaoke bars and practice the songs repeatedly every day. The theme of Changes Felt through Singing indicated that the scores given by a karaoke machine, the natural swaying of the body to the rhythm, improving singing techniques, and singing along in the atmosphere created by the lyrics let them know their singing has improved and helps them to enjoy singing. Namely, the objective evaluations given by karaoke scores, the subjective evaluation of feelings within their bodies, and a deeper understanding of the lyrics and music achieved by singing the same songs repeatedly were the factors that made them find singing enjoyable.},
	booktitle = {Human Interface and the Management of Information: Thematic Area, HIMI 2025, Held as Part of the 27th HCI International Conference, HCII 2025, Proceedings, Part I},
	pages = {335–347},
	numpages = {13},
	keywords = {Interview, Coding, Music},
	location = {Gothenburg, Sweden}
}

